<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client._CD.Silicons.StationAi"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="Select Shell"
    MinSize="240 480">
    <BoxContainer Orientation="Vertical">
        <ScrollContainer
            HorizontalAlignment="Stretch"
            HScrollEnabled="False"
            VerticalExpand="True"
            Visible="True"
            MinWidth="200">
            <BoxContainer
                Name="ShellsList"
                Orientation="Vertical">
                <!-- Populate with C# -->
                </BoxContainer>
        </ScrollContainer>
        <BoxContainer Orientation="Horizontal">
            <Button Name="JumpToShellButton" Text="Jump" Disabled="True"/>
            <Button Name="SelectShellButton" Text="Select" Disabled="True"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
